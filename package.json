{
  "name": "bidder-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc ",
    "start": "node dist/index.js",
    "dev2": "concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json,.env\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node --project tsconfig.json src/index.ts\"",
    "migrate:create": "cd ./src/tools/db/migration && typeorm migration:create $1",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/tools/db/ormconfig.ts",
    "migrate": "ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/tools/db/ormconfig.ts",
    "migrate:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop -d  ./src/tools/db/ormconfig.ts",
    "migrate:fresh": "npm run migrate:drop && ts-node  ./node_modules/typeorm/cli.js migration:run -d ./src/tools/db/ormconfig.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "argon2": "0.26.0",
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.20",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.26.0",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.12",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0",
    "yeoman-generator": "^5.8.0",
    "zod": "^3.21.4",
    "zod-validation-error": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@jest/globals": "^29.5.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.11.10",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "typescript": "^4.9.3"
  }
}
